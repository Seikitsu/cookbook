<header class="navbar navbar-fixed-top">
	<nav class="navbar-inner">
		<div class="container">
			<%= link_to "Kuchařka pro matfyzáky", root_path, :id => "logo" %>
			<ul class="nav pull-right">
				<li><%= link_to "FAQ", help_path %></li>
				<li><%= link_to "O kuchařce", about_path %></li>
				<% if signed_in? %>
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown"> Účet <b class="caret"></b></a>
					<ul class="dropdown-menu">				
						<li><%= link_to "Přidat článek", new_path %></li>
						<% if current_user.admin? %>
							<li><%= link_to "Uživatelé", users_path %></li>
						<% end %>
						<li><%= link_to "Profil", current_user %></li>
						<li><%= link_to "Nastavení", edit_user_path(@user) %></li>
						<li><%= link_to "Odhlásit se", signout_path, method: "delete" %></li>
					</ul>
				</li>
				<% else %>
				<li><%= link_to "Přihlásit se", signin_path %></li>
				<% end %>
			</ul>
		</div>
	</nav>
</header>