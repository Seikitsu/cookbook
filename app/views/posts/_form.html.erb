<%= form_for(@post) do |f| %>
  
  <div class="field">
    <%= f.label :heading, "Název článku" %>
    <%= f.text_field :heading %>
  </div>
  <div class="field">
    <%= f.label :content, "Článek" %>
    <%= f.text_area :content, size: "60x12" %>
  </div>
  <!--<div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>-->
  <div class="actions">
    <%= f.submit %>
